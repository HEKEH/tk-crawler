{
  "name": "@tk-crawler/crawler-server",
  "version": "0.0.0",
  "exports": {
    ".": {
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "ecosystem.config.js",
    "package.json",
    "public"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development dotenv -e ../../.env.development nodemon",
    "build": "rm -rf dist && rollup --config rollup.config.mjs",
    "start": "cross-env NODE_ENV=production dotenv -e ${GLOBAL_DOTENV_CONFIG_PATH:-../../.env.production} node dist/index.js",
    "prod:start": "cross-env dotenv -e ${GLOBAL_DOTENV_CONFIG_PATH:-../../.env.production} pm2-runtime start ecosystem.config.js --env production",
    "prod:restart": "cross-env dotenv -e ${GLOBAL_DOTENV_CONFIG_PATH:-../../.env.production} pm2 restart ecosystem.config.js --env production",
    "prod:stop": "cross-env pm2 stop ecosystem.config.js",
    "prod:delete": "cross-env pm2 delete ecosystem.config.js",
    "prod:log": "cross-env pm2 logs",
    "prod:flush": "cross-env pm2 flush",
    "docker:build": "./scripts/docker/build-docker-image.sh && pnpm docker:output",
    "docker:build:local": "./scripts/docker/build-docker-image.sh -e ./.env.local.production -i tk-crawler-server-local",
    "docker:output": "docker save -o ./docker-images/tk-crawler-server.tar tk-crawler-server:latest",
    "lint": "eslint",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@tk-crawler/database": "workspace:*",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^7.4.2",
    "i18next-fs-backend": "^2.3.2",
    "pm2": "^5.4.3",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@tk-crawler/biz-shared": "workspace:*",
    "@tk-crawler/shared": "workspace:*",
    "@types/bcryptjs": "^2.4.6",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-router": "^7.4.8",
    "@types/lodash": "^4.17.13",
    "@types/uuid": "^10.0.0",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "dayjs": "^1.11.13",
    "i18next": "^23.16.0",
    "jwt-simple": "^0.5.6",
    "koa": "^2.15.4",
    "koa-bodyparser": "^4.4.1",
    "koa-router": "^13.0.1",
    "lodash": "^4.17.21",
    "log4js": "^6.9.1",
    "nodemon": "^3.1.9"
  }
}