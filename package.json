{
  "name": "tk-crawler",
  "private": true,
  "packageManager": "pnpm@8.0.0",
  "repository": {
    "type": "git"
  },
  "engines": {
    "node": ">= 18",
    "pnpm": ">= 8"
  },
  "scripts": {
    "dev": "cross-env ts-node --project ./tsconfig.node.json --files -r tsconfig-paths/register ./scripts/dev-start.ts",
    "build": "cross-env turbo build",
    "lint": "eslint",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "redis:docker-start:dev": "cross-env ts-node --project ./tsconfig.node.json --files -r tsconfig-paths/register ./scripts/docker/redis/start.ts development",
    "redis:docker-start:prod": "cross-env ts-node --project ./tsconfig.node.json --files -r tsconfig-paths/register ./scripts/docker/redis/start.ts production",
    "mysql:docker-start:dev": "cross-env ts-node --project ./tsconfig.node.json --files -r tsconfig-paths/register ./scripts/docker/mysql/start.ts development",
    "mysql:docker-start:prod": "cross-env ts-node --project ./tsconfig.node.json --files -r tsconfig-paths/register ./scripts/docker/mysql/start.ts production"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.12.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.15.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.9.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.14.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "sass": "^1.83.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.3.5",
    "turbo": "^2.3.0",
    "typescript": "~5.5.0",
    "unplugin-vue-macros": "^2.13.3",
    "vite": "^5.4.11",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-dts": "^4.3.0"
  },
  "lint-staged": {
    "{packages,apps}/**/*.{js,ts,tsx}": [
      "eslint --fix --color"
    ]
  }
}