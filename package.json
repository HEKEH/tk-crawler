{
  "name": "tk-crawler",
  "private": true,
  "packageManager": "pnpm@8.0.0",
  "repository": {
    "type": "git"
  },
  "engines": {
    "node": ">= 18",
    "pnpm": ">= 8"
  },
  "scripts": {
    "dev": "cross-env ts-node --project ./tsconfig.node.json --files -r tsconfig-paths/register ./scripts/dev-start.ts",
    "dev:server": "cross-env turbo dev --filter=@tk-crawler/server",
    "dev:crawl-server": "cross-env turbo dev --filter=@tk-crawler/crawl-server",
    "dev:crawler-admin-client": "cross-env turbo dev --filter=tk-crawler-admin-client",
    "dev:follow-client": "cross-env turbo dev --filter=tk-follow-client",
    "dev:mobile-follow-client": "cross-env turbo dev --filter=tk-mobile-follow-client",
    "dev:main-client": "cross-env turbo dev --filter=tk-crawler-main-client",
    "dev:main-web": "cross-env turbo dev --filter=@tk-crawler/main-web",
    "build:server": "cross-env turbo build --filter=@tk-crawler/server",
    "build:crawl-server": "cross-env turbo build --filter=@tk-crawler/crawl-server",
    "build:crawler-admin-client": "cross-env turbo build --filter=tk-crawler-admin-client",
    "build:follow-client": "cross-env turbo build --filter=tk-follow-client",
    "build:mobile-follow-client": "cross-env turbo build --filter=tk-mobile-follow-client",
    "build:main-web": "cross-env turbo build --filter=@tk-crawler/main-web",
    "build:main-client": "cross-env turbo build --filter=tk-crawler-main-client",
    "docker:mysql:dev": "cd packages/database && pnpm run mysql:docker-start:dev",
    "prisma:migrate": "cd packages/database && pnpm prisma:migrate",
    "prisma:seed": "cd packages/database && pnpm prisma:seed",
    "prisma:generate": "cd packages/database && pnpm prisma:generate",
    "docker:redis:dev": "cd packages/database && pnpm run redis:docker-start:dev",
    "lint": "eslint",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.12.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.15.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.9.0",
    "@types/node-schedule": "^2.1.7",
    "cross-env": "^7.0.3",
    "eslint": "^9.14.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "node-schedule": "^2.1.1",
    "os-proxy-config": "^1.1.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.37.0",
    "rollup-plugin-dts": "^6.2.1",
    "sass": "^1.83.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.4.0",
    "turbo": "^2.3.0",
    "typescript": "~5.5.0",
    "unplugin-vue-macros": "^2.13.3",
    "vite": "^5.4.11",
    "vite-plugin-html": "^3.2.2"
  },
  "lint-staged": {
    "{packages,apps}/**/*.{js,ts,tsx}": [
      "eslint --fix --color"
    ]
  }
}