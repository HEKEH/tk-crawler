{
  "name": "@tk-crawler/build-and-deploy",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": {
      "types": "./dist/types/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./*.mjs": {
      "types": "./dist/types/*.d.mts",
      "import": "./dist/*.mjs",
      "require": "./dist/*.mjs"
    },
    "./*.js": {
      "types": "./dist/types/*.d.mts",
      "import": "./dist/*.js",
      "require": "./dist/*.js"
    },
    "./*": {
      "types": "./dist/types/*.d.mts",
      "import": "./dist/*.mjs",
      "require": "./dist/*.js"
    }
  },
  "main": "./dist/index.js",
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production rimraf dist && rollup --config rollup.config.mjs",
    "lint": "eslint",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.5",
    "@tk-crawler/plugins": "workspace:*",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitejs/plugin-vue-jsx": "^4.1.1",
    "vite": "^5.4.11",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-lazy-import": "^1.0.7"
  },
  "devDependencies": {
    "vite": "^5.4.11"
  }
}