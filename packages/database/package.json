{
  "name": "@tk-crawler/database",
  "version": "0.0.0",
  "private": true,
  "files": [],
  "scripts": {
    "preinstall": "npx only-allow pnpm && pnpm prisma:generate",
    "redis:docker-start:dev": "cross-env ts-node --project ../../tsconfig.node.json --files -r tsconfig-paths/register ./scripts/docker/redis/start.ts development",
    "redis:docker-start:prod": "cross-env ts-node --project ../../tsconfig.node.json --files -r tsconfig-paths/register ./scripts/docker/redis/start.ts production",
    "mysql:docker-start:dev": "cross-env ts-node --project ../../tsconfig.node.json --files -r tsconfig-paths/register ./scripts/docker/mysql/start.ts development",
    "mysql:docker-start:prod": "cross-env ts-node --project ../../tsconfig.node.json --files -r tsconfig-paths/register ./scripts/docker/mysql/start.ts production",
    "prisma:generate": "cross-env prisma generate --schema ./src/mysql/prisma/schema.prisma",
    "prisma:migrate": "cross-env dotenv -e .env.development -- prisma migrate dev --schema src/mysql/prisma/schema.prisma",
    "prisma:deploy:prod": "cross-env dotenv -e .env.production -- prisma migrate deploy --schema src/mysql/prisma/schema.prisma",
    "debug:env": "cross-env dotenv -e .env.development -- node -e \"console.log(process.env.MYSQL_DATABASE_URL)\""
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "@tk-crawler/shared": "workspace:*",
    "prisma": "^6.4.1"
  }
}