{
  "name": "@tk-crawler/database",
  "version": "0.0.0",
  "private": true,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "package.json",
    "shared/prisma/schema.prisma"
  ],
  "config": {
    "tsNodeConfig": "--project ../../tsconfig.node.json --files -r tsconfig-paths/register"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm prisma:generate",
    "build": "rm -rf dist && rollup --config rollup.config.mjs",
    "redis:docker-start:dev": "cross-env ts-node $npm_package_config_tsNodeConfig ./scripts/docker/redis/start.ts development",
    "redis:docker-start:prod": "cross-env ts-node $npm_package_config_tsNodeConfig ./scripts/docker/redis/start.ts production",
    "mysql:docker-start:dev": "cross-env ts-node $npm_package_config_tsNodeConfig ./scripts/docker/mysql/start.ts development",
    "mysql:docker-start:prod": "cross-env ts-node $npm_package_config_tsNodeConfig ./scripts/docker/mysql/start.ts production",
    "prisma:generate": "cross-env prisma generate --schema ./shared/prisma/schema.prisma",
    "prisma:migrate": "cross-env dotenv -e ../../.env.development -- ts-node $npm_package_config_tsNodeConfig ./scripts/prisma/migrate.ts",
    "prisma:seed": "cross-env dotenv -e ../../.env.development -- ts-node $npm_package_config_tsNodeConfig ./scripts/prisma/seed.ts",
    "prisma:deploy:prod": "cross-env dotenv -e ../../.env.production -- ts-node $npm_package_config_tsNodeConfig ./scripts/prisma/deploy.ts",
    "prisma:deploy:local": "cross-env dotenv -e ../../.env.local.production -- ts-node $npm_package_config_tsNodeConfig ./scripts/prisma/deploy.ts",
    "debug:env": "cross-env dotenv -e ../../.env.development -- node -e \"console.log(process.env.MYSQL_DATABASE_URL)\""
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "ioredis": "^5.5.0",
    "prisma": "^6.4.1",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@tk-crawler/shared": "workspace:*",
    "@types/ioredis": "^5.0.0",
    "@types/uuid": "^10.0.0"
  }
}