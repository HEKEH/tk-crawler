{
  "compilerOptions": {
    "target": "es2018",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@tk-crawler/core/*": ["packages/core/src/*"],
      "@tk-crawler/core": ["packages/core/src/index.ts"]
    },
    "resolveJsonModule": true,
    "types": [],
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": false,
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "preserveSymlinks": true
  }
}
