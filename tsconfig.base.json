{
  "compilerOptions": {
    "target": "es2018",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@tk-crawler/core/*": ["packages/core/src/*"],
      "@tk-crawler/core": ["packages/core/src/index.ts"],
      "@tk-crawler/shared/*": ["packages/shared/src/*"],
      "@tk-crawler/shared": ["packages/shared/src/index.ts"],
      "@tk-crawler/database/*": ["packages/database/src/*"],
      "@tk-crawler/database": ["packages/database/src/index.ts"],
      "@tk-crawler-admin-client/shared/*": [
        "apps/crawler-admin-client/shared/*"
      ],
      "@tk-crawler-admin-client/shared": [
        "apps/crawler-admin-client/shared/index.ts"
      ],
      "@tk-follow-client/shared/*": ["apps/follow-client/shared/*"],
      "@tk-follow-client/shared": ["apps/follow-client/shared/index.ts"],
      "@tk-crawler/script-tools/*": ["packages/script-tools/src/*"],
      "@tk-crawler/script-tools": ["packages/script-tools/src/index.ts"]
    },
    "resolveJsonModule": true,
    "types": [],
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": false,
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "preserveSymlinks": true
  }
}
