{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": [
    "scripts/**/*",
    "apps/server/**/*",
    "apps/pc-client/electron/**/*",
    "apps/pc-client/shared/**/*",
    "apps/crawler-admin-client/electron/**/*",
    "apps/crawler-admin-client/shared/**/*",
    "apps/follow-client/electron/**/*",
    "apps/follow-client/shared/**/*",
    "packages/core/**/*",
    "packages/shared/**/*",
    "packages/electron-utils/**/*",
    "packages/biz-shared/**/*",
    "packages/play/**/*",
    "packages/script-tools/**/*",
    "packages/database/**/*",
    "**/vite.config.*",
    ".husky/**/*",
    "backup/request-result-demo"
  ],
  "exclude": ["**/dist", "**/node_modules/**"]
}
