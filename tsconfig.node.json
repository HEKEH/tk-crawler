{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "server/*": ["apps/server/src/*"]
    },
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["scripts/**/*", "apps/server/**/*", "**/vite.config.*", ".husky/**/*"],
  "exclude": ["**/dist", "**/node_modules/**"]
}
