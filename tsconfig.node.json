{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": [
    "scripts/**/*",
    "apps/server/**/*",
    "apps/crawler/**/*",
    "apps/pc-client/electron/**/*",
    "apps/pc-client/shared/**/*",
    "apps/crawler-client/electron/**/*",
    "apps/crawler-client/shared/**/*",
    "packages/core/**/*",
    "packages/shared/**/*",
    "packages/play/**/*",
    "**/vite.config.*",
    ".husky/**/*"
  ],
  "exclude": ["**/dist", "**/node_modules/**"]
}
