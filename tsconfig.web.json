{
  "extends": ["./tsconfig.base.json"],
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["unplugin-vue-macros/macros-global"],
    "skipLibCheck": true
  },
  "include": ["packages", "apps"],
  "exclude": [
    "apps/server/**",
    "apps/crawler/**",
    "apps/pc-client/electron/**",
    "apps/crawler-client/electron/**",
    "packages/core/**",
    "packages/play/**",
    "**/node_modules/**",
    "**/dist/**",
    "**/vite.config.*"
  ]
}
