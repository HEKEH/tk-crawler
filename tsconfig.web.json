{
  "extends": ["./tsconfig.base.json"],
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "jsxImportSource": "vue",
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["unplugin-vue-macros/macros-global"],
    "skipLibCheck": true
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.vue",
    "packages/**/*.tsx",
    "apps/**/*.ts",
    "apps/**/*.d.ts",
    "apps/**/*.vue",
    "apps/**/*.tsx"
  ],
  "exclude": [
    "scripts/**",
    "apps/server/**",
    "apps/build-and-deploy/**",
    "apps/crawl-server/**",
    "apps/crawler-admin-client/electron/**",
    "apps/follow-client/electron/**",
    "apps/mobile-follow-client/electron/**",
    "apps/main-client/electron/**",
    "apps/data-scripts/**",
    "packages/core/**",
    "packages/play/**",
    "packages/script-tools/**",
    "packages/database/**",
    "packages/plugins/**",
    "packages/build-and-deploy/**",
    "packages/electron-utils/src/main/**",
    "packages/electron-biz-shared/src/main/**",
    "packages/tk-requests/**/*",
    "packages/server-shared/**/*",
    "packages/node-shared/**/*",
    "**/node_modules/**",
    "**/dist/**",
    "**/vite.config.*",
    "**/tsup.config.*"
  ]
}
