{
  "extends": ["./tsconfig.base.json"],
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "jsxImportSource": "vue",
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["unplugin-vue-macros/macros-global"],
    "skipLibCheck": true
  },
  "include": ["packages", "apps"],
  "exclude": [
    "scripts/**",
    "apps/server/**",
    "apps/crawl-server/**",
    "apps/crawler-admin-client/electron/**",
    "apps/follow-client/electron/**",
    "apps/mobile-follow-client/electron/**",
    "apps/main-client/electron/**",
    "packages/core/**",
    "packages/play/**",
    "packages/script-tools/**",
    "packages/database/**",
    "packages/plugins/src/**",
    "**/node_modules/**",
    "**/dist/**",
    "**/vite.config.*",
    "**/tsup.config.*"
  ]
}
